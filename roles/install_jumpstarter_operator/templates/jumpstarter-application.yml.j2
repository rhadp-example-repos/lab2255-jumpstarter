apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: jumpstarter
  namespace: openshift-gitops
spec:
  destination:
    name: in-cluster
    namespace: "{{ jumpstarter_namespace }}"
  project: default
  source:
    chart: jumpstarter
    helm:
      valuesObject:
        global:
          baseDomain: "{{ cluster_apps_domain }}"
          metrics:
            enabled: true
        jumpstarter-controller:
          grpc:
            mode: "route"
    repoURL: "{{ jumpstarter_helm_repo }}"
    targetRevision: "{{ jumpstarter_helm_repo_version }}"
  syncPolicy:
    automated: {}
    retry:
      backoff:
        duration: 10s5s
        factor: 2
        maxDuration: 10m0s
      limit: 2
    syncOptions:
      - RespectIgnoreDifferences=true
